<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@android:color/black">

    <TextView
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:ellipsize="start"
        android:padding="10dp"
        android:singleLine="true"
        android:textAlignment="textEnd"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.152" />

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="10dp"
        android:textAlignment="textEnd"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:singleLine="true"
        android:ellipsize="end"
        app:layout_constraintBottom_toTopOf="@+id/input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cardviewbg"
        android:padding="10dp"
        android:textAlignment="center"
        app:cardPreventCornerOverlap="false"
        android:layout_margin="10dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/AC"
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/roundshape"
                android:padding="20dp"
                android:textAlignment="center"
                android:foreground="?android:attr/selectableItemBackground"
                android:textColor="@android:color/black"
                android:text="AC"
                android:textSize="30dp"
                android:textStyle="bold" />



            <Button
                android:id="@+id/pi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_margin="5dp"
                android:background="@drawable/roundbtns"
                android:padding="20dp"
                android:text="@string/pi"
                android:foreground="?android:attr/selectableItemBackground"
                android:textColor="@android:color/holo_orange_light"
                android:textSize="30dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/SQroot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_margin="5dp"
                android:background="@drawable/roundbtns"
                android:padding="20dp"
                android:text="@string/squareroot"
                android:foreground="?android:attr/selectableItemBackground"
                android:textColor="@android:color/holo_orange_light"
                android:textSize="30dp"
                android:textStyle="bold" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp">

            <Button
                android:id="@+id/pow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/roundbtns"
                android:padding="20dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:textColor="@android:color/holo_orange_light"
                android:text="^"
                android:textSize="30dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/bracketopen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_margin="5dp"
                android:background="@drawable/roundbtns"
                android:padding="20dp"
                android:text="("
                android:foreground="?android:attr/selectableItemBackground"
                android:fontFamily="sans-serif-smallcaps"
                android:textColor="@android:color/holo_orange_light"
                android:textSize="30dp" />

            <Button
                android:id="@+id/bracketclose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_margin="5dp"
                android:background="@drawable/roundbtns"
                android:padding="20dp"
                android:text=")"
                android:foreground="?android:attr/selectableItemBackground"
                android:fontFamily="sans-serif-smallcaps"
                android:textColor="@android:color/holo_orange_light"
                android:textSize="30dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/divide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_margin="5dp"
                android:background="@drawable/roundbtns"
                android:padding="20dp"
                android:text="รท"
                android:foreground="?android:attr/selectableItemBackground"
                android:fontFamily="sans-serif-smallcaps"
                android:textColor="@android:color/holo_orange_light"
                android:textSize="30dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dp">

            <Button
                android:id="@+id/seven"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:fontFamily="sans-serif-smallcaps"
                android:background="@drawable/roundbtns"
                android:padding="20dp"
                android:text="7"
                android:foreground="?android:attr/selectableItemBackground"
                android:textColor="@android:color/white"
                android:textSize="30dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/eight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/roundbtns"
                android:padding="20dp"
                android:text="8"
                android:foreground="?android:attr/selectableItemBackground"
                android:fontFamily="sans-serif-smallcaps"
                android:textColor="@android:color/white"
                android:textSize="30dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/nine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/roundbtns"
                android:padding="20dp"
                android:text="9"
                android:foreground="?android:attr/selectableItemBackground"
                android:fontFamily="sans-serif-smallcaps"
                android:textColor="@android:color/white"
                android:textSize="30dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/multiply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/roundbtns"
                android:padding="20dp"
                android:text="*"
                android:foreground="?android:attr/selectableItemBackground"
                android:fontFamily="sans-serif-smallcaps"
                android:textColor="@android:color/holo_orange_light"
                android:textSize="30dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="270dp">

            <Button
                android:id="@+id/four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/roundbtns"
                android:padding="20dp"
                android:text="4"
                android:foreground="?android:attr/selectableItemBackground"
                android:fontFamily="sans-serif-smallcaps"
                android:textColor="@android:color/white"
                android:textSize="30dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/five"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/roundbtns"
                android:padding="20dp"
                android:text="5"
                android:foreground="?android:attr/selectableItemBackground"
                android:fontFamily="sans-serif-smallcaps"
                android:textColor="@android:color/white"
                android:textSize="30dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/six"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/roundbtns"
                android:padding="20dp"
                android:text="6"
                android:foreground="?android:attr/selectableItemBackground"
                android:fontFamily="sans-serif-smallcaps"
                android:textColor="@android:color/white"
                android:textSize="30dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/roundbtns"
                android:padding="20dp"
                android:text="-"
                android:foreground="?android:attr/selectableItemBackground"
                android:fontFamily="sans-serif-smallcaps"
                android:textColor="@android:color/holo_orange_light"
                android:textSize="30dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="360dp">

            <Button
                android:id="@+id/one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/roundbtns"
                android:padding="20dp"
                android:text="1"
                android:foreground="?android:attr/selectableItemBackground"
                android:fontFamily="sans-serif-smallcaps"
                android:textColor="@android:color/white"
                android:textSize="30dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/roundbtns"
                android:padding="20dp"
                android:text="2"
                android:foreground="?android:attr/selectableItemBackground"
                android:fontFamily="sans-serif-smallcaps"
                android:textColor="@android:color/white"
                android:textSize="30dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/roundbtns"
                android:padding="20dp"
                android:text="3"
                android:foreground="?android:attr/selectableItemBackground"
                android:fontFamily="sans-serif-smallcaps"
                android:textColor="@android:color/white"
                android:textSize="30dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/roundbtns"
                android:padding="20dp"
                android:text="+"
                android:foreground="?android:attr/selectableItemBackground"
                android:fontFamily="sans-serif-smallcaps"
                android:textColor="@android:color/holo_orange_light"
                android:textSize="30dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="450dp"
            android:foreground="?android:attr/selectableItemBackground">

            <Button
                android:id="@+id/point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/roundbtns"
                android:padding="20dp"
                android:text="."
                android:foreground="?android:attr/selectableItemBackground"
                android:fontFamily="sans-serif-smallcaps"
                android:textColor="@android:color/white"
                android:textSize="30dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/zero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/roundbtns"
                android:padding="20dp"
                android:text="0"
                android:foreground="?android:attr/selectableItemBackground"
                android:fontFamily="sans-serif-smallcaps"
                android:textColor="@android:color/white"
                android:textSize="30dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/equal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/roundbtns"
                android:padding="20dp"
                android:text="="
                android:foreground="?android:attr/selectableItemBackground"
                android:fontFamily="sans-serif-smallcaps"
                android:textColor="@android:color/white"
                android:textSize="30dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/backspace"
                android:layout_width="85dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:background="@drawable/roundbtns"
                android:fontFamily="sans-serif-smallcaps"
                android:padding="20dp"
                android:scaleType="center"
                android:src="@drawable/backspace_white_24x24"
                android:textColor="@android:color/holo_orange_light"
                android:textSize="30dp"
                android:textStyle="bold" />
        </LinearLayout>

        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>